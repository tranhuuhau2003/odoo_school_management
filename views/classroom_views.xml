<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Lớp học">
                <field name="name"/>
                <field name="school_year"/>
                <field name="homeroom_teacher"/>
            </tree>
        </field>
    </record>

    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Lớp học">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="school_year"/>
                        <field name="homeroom_teacher"/>
                    </group>
                    <notebook>
                        <page string="Học sinh">
                            <field name="student_ids">
                                <tree string="Học sinh">
                                    <field name="name"/>
                                    <field name="student_code"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Lớp học</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_root" name="Quản lý trường học" sequence="10"/>
    <menuitem id="menu_school_class" name="Lớp học" parent="menu_school_root" action="action_school_class" sequence="20"/>
</odoo>
