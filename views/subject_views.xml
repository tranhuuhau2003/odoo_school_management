<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_subject_tree" model="ir.ui.view">
        <field name="name">school.subject.tree</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <tree string="Môn học">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="view_school_subject_form" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form string="Môn học">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_school_subject" model="ir.actions.act_window">
        <field name="name">Môn học</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_school_subject" name="Môn học" parent="menu_school_root" action="action_school_subject" sequence="40"/>
</odoo>
