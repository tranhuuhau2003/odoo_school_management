<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_attendance_tree" model="ir.ui.view">
        <field name="name">school.attendance.tree</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <tree string="Điểm danh">
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="date"/>
                <field name="status"/>
                <field name="note"/>
            </tree>
        </field>
    </record>
    <record id="view_school_attendance_form" model="ir.ui.view">
        <field name="name">school.attendance.form</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <form string="Điểm danh">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="class_id"/>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_school_attendance" model="ir.actions.act_window">
        <field name="name">Điểm danh</field>
        <field name="res_model">school.attendance</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_school_attendance" name="Điểm danh" parent="menu_school_root" action="action_school_attendance" sequence="50"/>
</odoo>
