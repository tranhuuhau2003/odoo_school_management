<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu & Action -->
    <menuitem id="menu_school_root" name="Quản lý trường học" sequence="10"/>

    <!-- Student -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Học sinh</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_student" name="Học sinh" parent="menu_school_root" action="action_student" sequence="1"/>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="birthday"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="classroom_id"/>
            </tree>
        </field>
    </record>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birthday"/>
                        <field name="gender"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="classroom_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Classroom -->
    <record id="action_classroom" model="ir.actions.act_window">
        <field name="name">Lớp học</field>
        <field name="res_model">student.classroom</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_classroom" name="Lớp học" parent="menu_school_root" action="action_classroom" sequence="2"/>

    <record id="view_classroom_tree" model="ir.ui.view">
        <field name="name">student.classroom.tree</field>
        <field name="model">student.classroom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>
    <record id="view_classroom_form" model="ir.ui.view">
        <field name="name">student.classroom.form</field>
        <field name="model">student.classroom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                    </group>
                    <notebook>
                        <page string="Học sinh">
                            <field name="student_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="birthday"/>
                                    <field name="gender"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Grade -->
    <record id="action_grade" model="ir.actions.act_window">
        <field name="name">Điểm số</field>
        <field name="res_model">student.grade</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_grade" name="Điểm số" parent="menu_school_root" action="action_grade" sequence="3"/>

    <record id="view_grade_tree" model="ir.ui.view">
        <field name="name">student.grade.tree</field>
        <field name="model">student.grade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="subject"/>
                <field name="score"/>
                <field name="note"/>
            </tree>
        </field>
    </record>
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">student.grade.form</field>
        <field name="model">student.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject"/>
                        <field name="score"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
